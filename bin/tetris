#!/usr/bin/env ruby
$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib")
require "tetris"

Shoes.app width: 400, height: 620, resizable: false do
  background gray

  def rect_builder(*attrs)
    attrs.flatten!
    rect(attrs[0], attrs[1], attrs[2], attrs[3])
  end

  debugger = Proc.new do |message|
    debug message
  end

  shape_renderer = Proc.new do |color, left, top, width, height|
    shape do
      fill color
      rect(left, top, width, height)
    end
  end

  shape_remover = Proc.new do |shape|
    shape.remove
  end

  piece_renderer = Proc.new do |piece|
    piece.rendered.remove unless piece.rendered.nil?

    piece.rendered = shape do
      fill piece.color
      piece.shape.each_with_index do |row, y|
        row.each_with_index do |col, x|
          rect_builder(piece.block_attributes(x, y)) if col
        end
      end
    end
  end

  @map = Tetris::Map.new(piece_renderer, shape_renderer, shape_remover, debugger)

  @anim = animate 1 do
    if @map.current_piece.blocked_down?
      unless @map.generate_new_piece
        @anim.stop and alert("Game Over")
      end
      @map.render_grid
    else
      @map.current_piece.move_down
    end
    @map.update_rows
  end

  keypress do |key|
    if key == :left
      @map.current_piece.move_left
    elsif key == :right
      @map.current_piece.move_right
    elsif key == :up
      @map.current_piece.move_up
    elsif key == :down
      @map.current_piece.move_down
    end
  end
end
