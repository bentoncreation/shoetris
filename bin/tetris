#!/usr/bin/env ruby
$LOAD_PATH.unshift("#{File.dirname(__FILE__)}/../lib")
require "tetris"

Shoes.app width: 400, height: 620, resizable: false do
  background gray

  debugger = Proc.new do |message|
    debug message
  end

  renderer = Proc.new do |color, rectangles|
    shape do
      fill color
      Array(rectangles).each do |r|
        rect(r.left, r.top, r.width, r.height)
      end
    end
  end

  remover = Proc.new do |shape|
    shape.remove
  end

  @map = Tetris::Map.new(renderer, remover, debugger)

  @anim = animate 1 do
    if @map.current_piece.blocked_down?
      unless @map.generate_new_piece
        @anim.stop and alert("Game Over")
      end
      @map.render_grid
    else
      @map.current_piece.move_down
    end
    @map.update_rows
  end

  keypress do |key|
    if key == :left
      @map.current_piece.move_left
    elsif key == :right
      @map.current_piece.move_right
    elsif key == :up
      @map.current_piece.move_up
    elsif key == :down
      @map.current_piece.move_down
    end
  end
end
